{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LabWired Debug (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Start LabWired GDB"
        },
        {
            "name": "LabWired Debug (Cortex-Debug)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "executable": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware",
            "cwd": "${workspaceFolder}",
            "device": "STM32F103C8",
            "cpu": "cortex-m3",
            "preLaunchTask": "Start LabWired GDB"
        }
    ]
}